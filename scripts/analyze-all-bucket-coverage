#!/bin/bash

# Wrapper script to analyze coverage for all GCS buckets
# Outputs CSV summaries to .scratch/ directory

set -euo pipefail

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
REPO_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"
ANALYZE_SCRIPT="$SCRIPT_DIR/analyze-bucket-coverage.py"
OUTPUT_DIR="$REPO_ROOT/.scratch"

# Buckets to process
RAW_BUCKETS=("test-jarvus-transit-data-demo-raw" "jarvus-transit-data-demo-raw")
PARSED_BUCKETS=("test-jarvus-transit-data-demo-parsed" "jarvus-transit-data-demo-parsed")

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Function to print colored output
print_info() {
    echo -e "${BLUE}[INFO]${NC} $1"
}

print_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

print_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

print_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

# Function to show usage
show_usage() {
    cat << EOF
Usage: $0 [OPTIONS]

Analyze coverage for all GCS buckets and save CSV summaries to .scratch/ directory.

OPTIONS:
    -l, --limit N       Limit files processed per bucket (for testing)
    -h, --help          Show this help message

BUCKETS ANALYZED:
    Raw buckets:
      - test-jarvus-transit-data-demo-raw
      - jarvus-transit-data-demo-raw

    Parsed buckets:
      - test-jarvus-transit-data-demo-parsed
      - jarvus-transit-data-demo-parsed

OUTPUT FILES:
    .scratch/test-jarvus-transit-data-demo-raw-coverage.csv
    .scratch/jarvus-transit-data-demo-raw-coverage.csv
    .scratch/test-jarvus-transit-data-demo-parsed-coverage.csv
    .scratch/jarvus-transit-data-demo-parsed-coverage.csv

EXAMPLES:
    $0                  # Analyze all buckets completely
    $0 --limit 10000    # Test with 10K files per bucket

EOF
}

# Parse command line arguments
LIMIT_ARG=""
while [[ $# -gt 0 ]]; do
    case $1 in
        -l|--limit)
            LIMIT_ARG="--limit $2"
            shift 2
            ;;
        -h|--help)
            show_usage
            exit 0
            ;;
        *)
            print_error "Unknown option: $1"
            show_usage
            exit 1
            ;;
    esac
done

# Check if analyze-bucket-coverage.py exists
if [ ! -f "$ANALYZE_SCRIPT" ]; then
    print_error "analyze-bucket-coverage.py script not found at: $ANALYZE_SCRIPT"
    exit 1
fi

# Check for Python 3
if ! command -v python3 &> /dev/null; then
    print_error "python3 is not installed or not in PATH"
    exit 1
fi

# Create .scratch directory if it doesn't exist
print_info "Creating output directory: $OUTPUT_DIR"
mkdir -p "$OUTPUT_DIR"

print_success "Output directory ready: $OUTPUT_DIR"
echo

# Process each bucket
SUCCESS_COUNT=0
FAILED_COUNT=0

# Process raw buckets
for bucket in "${RAW_BUCKETS[@]}"; do
    output_file="$OUTPUT_DIR/${bucket}-coverage.csv"

    print_info "Analyzing raw bucket: $bucket"
    print_info "Output file: $output_file"

    if python3 "$ANALYZE_SCRIPT" "$bucket" --output "$output_file" $LIMIT_ARG; then
        print_success "Completed: $bucket"
        SUCCESS_COUNT=$((SUCCESS_COUNT + 1))
    else
        print_error "Failed to analyze bucket: $bucket"
        FAILED_COUNT=$((FAILED_COUNT + 1))
    fi

    echo
done

# Process parsed buckets
for bucket in "${PARSED_BUCKETS[@]}"; do
    output_file="$OUTPUT_DIR/${bucket}-coverage.csv"

    print_info "Analyzing parsed bucket: $bucket"
    print_info "Output file: $output_file"

    if python3 "$ANALYZE_SCRIPT" "$bucket" --output "$output_file" $LIMIT_ARG; then
        print_success "Completed: $bucket"
        SUCCESS_COUNT=$((SUCCESS_COUNT + 1))
    else
        print_error "Failed to analyze bucket: $bucket"
        FAILED_COUNT=$((FAILED_COUNT + 1))
    fi

    echo
done

# Summary
echo "----------------------------------------"
print_info "Summary:"
print_success "Successfully analyzed: $SUCCESS_COUNT bucket(s)"

if [ "$FAILED_COUNT" -gt 0 ]; then
    print_error "Failed to analyze: $FAILED_COUNT bucket(s)"
    exit 1
fi

echo
print_success "All coverage summaries saved to: $OUTPUT_DIR"
ls -lh "$OUTPUT_DIR"/*-coverage.csv 2>/dev/null || true
